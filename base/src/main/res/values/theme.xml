<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/windowBackground</item>

        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:textColorHint">@color/hintText</item>

        <item name="android:textAppearance">@style/App.Text.Small</item>
        <item name="android:textAppearanceInverse">@style/App.Text.Small.Inverse</item>
        <item name="android:textAppearanceMedium">@style/App.Text.Medium</item>
        <item name="android:textAppearanceMediumInverse">@style/App.Text.Medium.Inverse</item>
        <item name="android:textAppearanceLarge">@style/App.Text.Large</item>
        <item name="android:textAppearanceLargeInverse">@style/App.Text.Large.Inverse</item>

        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
    </style>

    <style name="AppMaterialTheme" parent="BaseTheme">

    </style>

    <style name="AppTheme" parent="AppMaterialTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/textOnColorPrimary</item>
    </style>

    <style name="App.Text.Small" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="App.Text.Small.Inverse" parent="@style/TextAppearance.AppCompat.Small.Inverse">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="App.Text.Medium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="App.Text.Medium.Inverse" parent="@style/TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="App.Text.Large" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="App.Text.Large.Inverse" parent="@style/TextAppearance.AppCompat.Large.Inverse">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="DefaultTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:paddingTop">@dimen/vt_space</item>
        <item name="android:paddingBottom">@dimen/vt_space</item>
    </style>

</resources>
